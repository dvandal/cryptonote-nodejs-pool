    "api": {
        "enabled": true,
        "hashrateWindow": 600,
        "updateInterval": 5,
        "bindIp": "0.0.0.0",
        "port": 8117,
        "blocks": 30,
        "payments": 30,
        "password": "admin_pass",
        "ssl": true,
        "sslPort": 8119,
        "sslCert": "cert.pem",
        "sslKey": "privkey.pem",
        "sslCA": "fullchain.pem",
        "trustProxyIP": true
    },

    "daemon": {
        "host": "127.0.0.1",
