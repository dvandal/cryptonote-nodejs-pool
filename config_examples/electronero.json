{
    "poolHost": "POOL_URL",

    "coin": "electronero",
    "symbol": "ETNX",
    "coinUnits": 100,
    "coinDecimalPlaces": 2,
    "coinDifficultyTarget": 120,

    "daemonType": "default",
    "cnAlgorithm": "cryptonight",
    "cnVariant": 4,
    "cnBlobType": 3,

    "logging": {
        "files": {
            "level": "info",
            "directory": "logs",
            "flushInterval": 5
